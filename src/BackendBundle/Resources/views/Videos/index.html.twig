{% extends "::base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}


{% endblock %}
{% block body %}


    <!--breadcrumbs start-->
    <div id="breadcrumbs-wrapper" class="grey lighten-3">

        <div class="container">
            <div class="row">
                <div class="col s12 m12 l12">
                    <h5 class="breadcrumbs-title">Administrar Videos</h5>
                    <ol class="breadcrumb">
                        <li><a href="{{ path("dashboard") }}">Panel de Administraci&oacute;n</a>
                        </li>
                        <li><a href="#">Videos</a>
                        </li>
                        <li class="active">Administrar Videos</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs end-->


    <!--start container-->
    <div class="container">
        {% if message is defined %}
            <div class="toats" message="{{ message }}"> </div>
        {% endif %}
        {% if error is defined %}
            <div class="toats" message="{{ error }}"> </div>
        {% endif %}
        <p><a class="btn waves-effect waves-light indigo load" href="{{ path("_videos_new") }}">Registrar</a></p>
        <div class="dataTables_wrapper">
            <table cellspacing="0" class="responsive-table display" id="data-table" width="100%">
                <thead>
                <tr>
                    <th>Titulo</th>
                    <th>URL</th>
                    <th>Visible en Homepage</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Titulo</th>
                    <th>URL</th>
                    <th>Visible en Homepage</th>
                    <th>Acciones</th>
                </tr>
                </tfoot>
                <tbody>
                {% for entity in entities %}
                <tr>
                    <td>{{ entity.titulo }}</td>
                    <td>{{ entity.url }}</td>
                    {% if entity.inhomepage %}
                    <td><input type="checkbox" id="myCheckbox_{{ entity.id }}" class="filled-in" checked="checked" disabled="disabled"/>
                        <label for="myCheckbox_{{ entity.id }}"></label></td>
                    {% else %}
                        <td><input type="checkbox" id="myCheckbox_{{ entity.id }}" class="filled-in"  disabled="disabled"/>
                            <label for="myCheckbox_{{ entity.id }}"></label></td>
                    {% endif %}
                    <td>
                        <a class="btn-floating waves-effect waves-light grey load" href="{{ path("_videos_edit", {"id": entity.id}) }}"><i class="mdi-editor-mode-edit"></i></a>
                        <a class="btn-floating waves-effect waves-light red load" href="{{ path("_videos_delete", {"id": entity.id}) }}"><i class="mdi-content-clear"></i></a>
                        <a class="btn-floating waves-effect waves-light blue modal-trigger" href="#modal{{ entity.id }}"><i class="mdi-action-visibility"></i></a>
                        <div id="modal{{ entity.id }}" class="modal">
                            <div class="modal-content">
                                <div class="video-container">
                                    <iframe width="100%" height="100%" src="{{ entity.url }}" frameborder="0" allowfullscreen></iframe>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Cerrar</a>
                            </div>
                        </div>

                    </td>


                </tr>

                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="divider"></div>
    </div>
    <!--end container-->


    <!-- END CONTENT -->

    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- START RIGHT SIDEBAR NAV-->

    <!-- LEFT RIGHT SIDEBAR NAV-->


{% endblock body %}
