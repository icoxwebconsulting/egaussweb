
<!--breadcrumbs start-->
<div id="breadcrumbs-wrapper" class="grey lighten-3">

    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h5 class="breadcrumbs-title">Estructura del Holding</h5>
                <ol class="breadcrumb">
                    <li><a href="{{ path("dashboard") }}">Panel de Administraci&oacute;n</a>
                    </li>
                    <li><a href="#">Estructura del Holding</a>
                    </li>
                    <li class="active">Estructura del Holding - {{ owner | upper }}</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs end-->


<!--start container-->
<div class="container">

    {% if entity is not defined %}

        <p class="caption">Oppss! AÃºn no haz creado la p&aacute;gina de la Estructura. Hazlo r&aacute;pido  <a class="btn waves-effect waves-light red darken-4 action" href="#" url="{{ path('_estructura_new', {"owner": owner}) }}"><i class="mdi-content-add"></i> Crear</a></p>


    {% else %}
        <div class="section">
            <a class="btn waves-effect waves-light red darken-4 right action" href="#" url="{{ path('_estructura_edit', {'id': entity.id, "owner": owner}) }}"><i class="mdi-content-backspace"></i> Modificar</a>
        </div>
        <div class="section">
            <h5>Titulo</h5>
            <p class="text-accent-1">{{ entity.titular }}</p>
        </div>
        <div class="row">
            <div class="col s12 m12 l8 left">
                <h5>Texto</h5>
                <p style="text-align: justify;" >{{ entity.texto }}</p>
                <h5>Video</h5>
                <div class="video-container">
                    {{ entity.urlvideo | raw }}
                </div>
            </div>
            <div class="col s12 m12 l4">

                <div class="row">
                    <h5>Foto</h5>
                    <img class="responsive-img materialboxed" src="{{ asset(entity.getWebPath()) }}" > </img>

                </div>
            </div>

        </div>

    {% endif %}

    <div class="divider"></div>
</div>

<script>
    $(".action").on("click", function(e){
        $('.preloader-wrapper').addClass('active');
        var url = $(this).attr("url");
        $("#main-wrapper").load(url,function() {
            $('.preloader-wrapper').removeClass('active');
        });

    })
</script>