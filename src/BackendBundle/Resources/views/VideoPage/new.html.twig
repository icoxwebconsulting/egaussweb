<div id="breadcrumbs-wrapper" class="grey lighten-3">

    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <h5 class="breadcrumbs-title">Administrar Videos</h5>
                <ol class="breadcrumb">
                    <li><a href="{{ path("dashboard") }}">Panel de Administraci&oacute;n</a>
                    </li>
                    <li class="active">Administrar Videos - {{ owner | upper }}</li>
                </ol>
            </div>
        </div>
    </div>
</div>

 <div class="container">

     <div class="col s12 m12 l6">
         <div class="card-panel">
             <h4 class="header2">Ingrese los datos para el registro.</h4>
             <div class="row">
                 <form class="col s12" id="form" action="{{path('_videopage_create', {"owner": owner})}}" method="post" enctype="multipart/form-data">

                     {{ form_widget(form) }}
                     <div class="input-field col s12" style="margin-top: 5%;">
                         <button name="action" type="submit" class="btn cyan waves-effect waves-light center">Guardar

                         </button>
                         <a name="cancel"  class="actiontab btn grey waves-effect waves-light center" href="#" url="{{ path("_videopages", {"owner": owner, "url": url}) }}">Cancelar

                         </a>

                     </div>

                 </form>
             </div>
         </div>
     </div>
     </div>
 <script>
     $('.tooltipped').tooltip({delay: 10});
     $(".actiontab").on("click", function(e){
         $('.tooltipped').tooltip('remove');
         $('.preloader-wrapper').addClass('active');
         var url = $(this).attr("url");
         $("#main-wrapper").load(url,function() {
             $('.preloader-wrapper').removeClass('active');
         });

     })
     var options = {
         beforeSubmit:  showRequest,
         success:       showResponse
     };

     function showRequest(){
         $('.preloader-wrapper').addClass('active');
     }
     function showResponse(responseText, statusText, xhr, $form)  {
         $('.preloader-wrapper').removeClass('active');
         var obj = jQuery.parseJSON(responseText);
         if(obj.status){
             var url = "{{ path("_videopages", {"owner": owner, "url": url}) }}";
             $("#main-wrapper").load(url);
             Materialize.toast(obj.message, 1000);
         }
         else{
             Materialize.toast(obj.message, 1000);
         }

     }
     $('#form').ajaxForm(options);
 </script>
