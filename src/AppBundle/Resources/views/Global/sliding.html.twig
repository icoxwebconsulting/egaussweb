{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<ul class="pagination">
    {% if first is defined and current != first %}
        <li class="waves-effect first">
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}"><i class="mdi-navigation-chevron-left"></i> Primera</a>
        </li>
    {% endif %}

    {% if previous is defined %}
        <li class="previous waves-effect">
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><i class="mdi-navigation-chevron-left"></i></a>
        </li>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
    <li class="page waves-effect">
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
    <li class="current active waves-effect">{{ page }}</li>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <li class="waves-effect next"><a href="{{ path(route, query|merge({(pageParameterName): next})) }}"><i class="mdi-navigation-chevron-right"></i></a></li>

    {% endif %}

    {% if last is defined and current != last %}
        <li class="last waves-effect">
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&Uacute;ltima <i class="mdi-navigation-chevron-right"></i></a>
        </li>
    {% endif %}
</ul>
{% endif %}
