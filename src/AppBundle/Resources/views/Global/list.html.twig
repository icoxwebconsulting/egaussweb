<div class="count">
    {{ pagination.getTotalItemCount }}
</div>
<table>
    <tr>
        {# sorting of properties based on query components #}
        <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
        <th{% if pagination.isSorted('a.titular') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Title', 'a.titular') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'Release', ['a.date', 'a.time']) }}</th>
    </tr>

    {# table body #}
    {% for noticia in pagination %}
        <tr {% if loop.index is odd %}class="color"{% endif %}>
            <td>{{ noticia.id }}</td>
            <td>{{ noticia.titular }}</td>
            <td>{{ noticia.fecha | date('Y-m-d') }}</td>
        </tr>
    {% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>