{%extends "::frontbase.html.twig"%}
{%block body%}

    <style>
        #footer{
            margin-top: 48em;
        }
    </style>
    <!----------------------------------------------------Centre-------------------------------------------------->
    <div class="wrapperCenter">
        <div class="mainContentWrapper">

            <div class="section">
                <h6 class="btnNav" style="text-align: left !important; padding: 0.7em !important;">{{ entity.titulo }}</h6>
            </div>
            <div class="row">
                <div class="row">
                    <div class="col s12 m12 l8 left">
                        <img class="responsive-img materialboxed" src="{{ asset(asset(entity.getWebPath)) }}">
                    </div>
                    <div class="col s12 m12 l4">
                        <div class="video-container">
                            <iframe width="150" height="100" src="{{ entity.urlvideo }}" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col s12 m12 l8 left">
                        <h6 class="btnNav" style="text-align: left !important; padding: 0.7em !important;">Direcci&oacute;n</h6>
                        <h6 class="btnNav" style="text-align: left !important; padding: 0.7em !important;">{{ entity.direccion }}</h6>

                        </div>
                </div>

                <section>
                    <div class="col s12 m12 l8 left" style="height:80%; width:70%; position: absolute;">
                        <div id="map"></div>

                    </div>
                </section>


            </div>
        </div>
        </div>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: {lat: {{ entity.latitud }}, lng: {{entity.longitud }} },
                zoom: 8
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQqEJzoGTCkiud3LBXduXMEFfDWrp2Ge8&callback=initMap" async defer></script>


{%endblock body%}