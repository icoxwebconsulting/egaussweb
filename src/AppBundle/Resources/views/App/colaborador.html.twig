{% extends "::frontbase.html.twig" %}
{% block body %}
    <!----------------------------------------------------Centre-------------------------------------------------->
    <div class="wrapperCenter">
        <div class="mainContentWrapper">
            <!--Left-->
            <div class="row">
                {% include 'AppBundle:App:menuLeftGlobalImasT.html.twig' with {"active":entity.slug} %}

                <div class="col s7 m12 l9 top10">
                    <div class="video-container top10">
                        {{ entity.urlvideo | raw }}
                    </div>

                    <div class="row top10">
                       <div class="col s12">
                        <ul class="tabs z-depth-1">
                            <li class="tab col s12"><a class="active waves-effect waves-red" href="#colaboradordatos">{{ entity.name }}</a></li>
                            <li class="tab col s12"><a class="waves-effect waves-red" href="#colaboradorevento">Eventos</a></li>
                            <li class="tab col s12"><a class="waves-effect waves-red" href="#video_colaborador_tab">Departamentos</a></li>
                        </ul>
                    </div>
                    <div id="colaboradordatos" class="col s12">
                        <div class="col s3 top10">
                            <img class="responsive-img activator card-profile-image" alt="" src="{{ asset(entity.getThumbnail()) }}">
                        </div>
                        <h5 class="card-title activator grey-text text-darken-4 top10" style="text-align: left; color: #e23337 !important;">{{ entity.name }}</h5>
                        <div id="texto">
                            <p class="justify"> {{ entity.descripcion | raw }}</p>
                        </div>
                    </div>
                    <div id="colaboradorevento" class="col s12">

                        {{ render(controller('AppBundle:Default:evento', { 'owner': entity.id })) }}
                    </div>
                    </div>
                    <div id="video_colaborador_tab" class="col s12">
                        {{ render(controller('AppBundle:Default:videocolaborador', { 'owner': entity.id })) }}
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock body %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/menu.js') }}" type="text/javascript"></script>
    <script>
        $( document ).ready(function() {
            $('#cssmenu li.has-sub>a').click();})

    </script>

{% endblock %}