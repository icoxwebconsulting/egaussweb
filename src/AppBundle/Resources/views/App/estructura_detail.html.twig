{% extends "::frontbase.html.twig" %}
{%block body%}
    <!----------------------------------------------------Centre-------------------------------------------------->
    <div class="wrapperCenter">
        <div class="mainContentWrapper">
            <!--Left-->
            <div class="row">
            {% include 'AppBundle:App:menuLeftSobreGlobal.html.twig' with {"active":owner} %}

            <div class="col s7 m12 l6 left top10">
            <h1 class="titlemenupage">{{ entity.titular }}</h1>
            <div class="top10">
                <div class="col s7 m12 l12 left">
                    <div id="texto">
                        <p class="justify">{{ entity.texto | raw }}</p>
                    </div>
                </div>

            </div>
                <div class="col s7 m12 l12">
            <div class="video-container top10">
                        {{ entity.urlvideo | raw }}
                    </div></div>
            </div>

            <div class="col s3 m12 l3">
             <img class="responsive-img activator card-profile-image materialboxed" alt="{{ entity.titular }}" src="{{ asset(entity.getThumbnail()) }}">
                {% if entity.getThumbnailPresentacion() is not null %}
                    <div class="row top10">
                        <a href="{{ asset(entity.getWebPathPresentacion()) }}" target="_blank"><img src="{{ asset('bundles/app/images/image_pdf.png') }}"/>  </a>

                    </div>
                {% endif %}
            </div>
            </div>
        </div>
        </div>

{%endblock body%}
{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/app/js/menu.js') }}" type="text/javascript"></script>
    <script>
        $( document ).ready(function() {
        $('#cssmenu li.has-sub>a').click();})

    </script>

{% endblock %}