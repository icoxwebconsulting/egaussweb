{% extends "::frontbase.html.twig" %}
{%block body%}
<style>
        iframe{
            height: 800px !important;
        }
    </style>
    <!----------------------------------------------------Centre-------------------------------------------------->
    <div class="wrapperCenter">
        <div class="mainContentWrapper">
            <!--Left-->
            <div class="row">
            {% include 'AppBundle:App:menuLeftGlobalImasT.html.twig' with {"active":"noticiasglobal"} %}

            <div class="col s7 m12 l6 left top10">
            <p class="justify"> {{ entity.fecha | date("Y-m-d")  }}</p>
            <h1 class="titlemenupage">{{ entity.titular }}</h1>
            <br/>
            <p><a>{{ entity.link }}</a></p>
            <div class="top10">
                <div class="col s5">
                <img class="responsive-img activator card-profile-image materialboxed" alt="{{ entity.titular }}" src="{{ asset(entity.webPath) }}">

                </div>
                <p class="justify">{{ entity.texto }}</p>
            </div>
            </div>

            <div class="col s3 m12 l3">
             {% include "AppBundle:App:twitter.html.twig" %}
            </div>
            </div>
        </div>
        </div>

{%endblock body%}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/menu.js') }}" type="text/javascript"></script>
{% endblock %}